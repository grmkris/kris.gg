{
  "name": "agent-next-app",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "next": "^16.1.1",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22",
      "@orpc/server": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "db:push": "bun run --filter @agent-next-app/db db:push",
    "db:studio": "bun run --filter @agent-next-app/db db:studio",
    "db:generate": "bun run --filter @agent-next-app/db db:generate",
    "db:migrate": "bun run --filter @agent-next-app/db db:migrate",
    "db:local": "bun run --filter @agent-next-app/db db:local"
  },
  "dependencies": {
    "@agent-next-app/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@agent-next-app/config": "workspace:*",
    "@types/node": "^22.13.14",
    "oxfmt": "latest",
    "oxlint": "latest",
    "typescript": "catalog:",
    "ultracite": "7.0.12"
  },
  "packageManager": "bun@1.3.5"
}
